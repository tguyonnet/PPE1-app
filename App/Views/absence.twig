{% extends 'layout.twig' %}

{% block content %}


    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">{{ page.title }} <a href="{{ path_for('form_absence') }}"><i class="fa fa-plus-circle" aria-hidden="true"></i></a></h1>
                    <div class="row">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Absence(s) de {{ page.employee[0].getName() }} {{ page.employee[0].getFirstname() }}
                                </div>
                                <!-- /.panel-heading -->
                                <div class="panel-body">
                                    <div class="table-responsive">

                                        {% if(absences!=null) %}

                                            <table class="table table-striped table-bordered table-hover">
                                            <thead>
                                            <tr>
                                                <th>Date de d√©but</th>
                                                <th>Date de fin</th>
                                                <th>Motif</th>
                                                <th>Type</th>
                                            </tr>
                                            </thead>

                                            <tbody>

                                        {% for absence in absences %}

                                            <tr><td> {{ absence.getStartDate()  }} </td><td>{{ absence.getEndDate() }} </td><td>{{ absence.getAbsencePattern() }}</td><td>{{ absence.getType() }}</td></tr>

                                        {% endfor %}
                                            </table>
                                            </tbody>
                                        {% else %}

                                            Vous n'avez pas d'asbences.

                                        {% endif %}

                                    </div>
                                    <!-- /.table-responsive -->
                                </div>
                                <!-- /.panel-body -->
                            </div>
                            <!-- /.panel -->
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->

{% endblock %}



{% block footer %}

    {{ page.footer }}

{% endblock %}