{% extends 'layout.twig' %}

{% block content %}


    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">{{ page.title }}</h1>
                    <div class="row">
                        <div class="panel panel-default">
                            <div class="panel-heading">Voici les informations de votre compte</div>
                            <div class="panel-body">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Nom</label>
                                        <input class="form-control" type="text" placeholder="Nom" value="{{ employee[0].getName() }}">
                                    </div>
                                    <div class="form-group">
                                        <label>Prénom</label>
                                        <input class="form-control" type="text" placeholder="Prénom" value="{{ employee[0].getFirstname() }}">
                                    </div>
                                    <div class="form-group">
                                        <label>Adresse</label>
                                        <input class="form-control" type="text" placeholder="Adresse" value="{{ employee[0].getStreetAddress() }}">
                                    </div>
                                    <div class="form-group">
                                        <label>Code postal</label>
                                        <input class="form-control" type="text" placeholder="Code postal" value="{{ employee[0].getPostalCode() }}">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Ville</label>
                                        <input class="form-control" type="text"  placeholder="Ville" value="{{ employee[0].getCity() }}">
                                    </div>
                                    <div class="form-group">
                                        <label>Date de naissance</label>
                                        <input class="form-control" type="date" placeholder="Date de naissance" value="{{ employee[0].getBirthdate() }}">
                                    </div>
                                    <div class="form-group">
                                        <label>Telephone</label>
                                        <input class="form-control" type="text" placeholder="Telephone" value="{{ employee[0].getCellphone() }}">
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input class="form-control" type="email" placeholder="Email" value="{{ employee[0].getEmail() }}">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}



{% block footer %}

    {{ page.footer }}

{% endblock %}